<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LifeIndexFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/TextViewStyle"
            android:text="Жизненный индекс (мл/кг)">
        </TextView>
        <TextView
            android:textSize="15sp"
            style="@style/TextViewStyle"
            android:text="Дает косвенное представление
            о функциональных возможностях системы внешнего дыхания">
        </TextView>

        <EditText
            android:id="@+id/editTextLungCapacity"
            android:hint="Жизненная емкость легких (мл)"
            android:layout_width="match_parent"
            android:inputType="number"
            style="@style/EditTextStyle">
        </EditText>

        <EditText
            android:id="@+id/editTextWeight"
            android:hint="Масса тела (кг)"
            android:layout_width="match_parent"
            android:inputType="number"
            style="@style/EditTextStyle">
        </EditText>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Продолжить">
        </Button>


    </LinearLayout>

</FrameLayout>