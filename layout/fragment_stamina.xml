<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StaminaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle"
            android:text="Коэффициент выносливости" />
        <TextView
            android:textSize="15sp"
            style="@style/TextViewStyle"
            android:text="Характеризует функциональное состояние сердечно-сосудистой системы" />

        <EditText
            android:id="@+id/editTextHeartBeats"
            android:hint="Частота серд. сокращений (уд/мин)"
            android:layout_width="match_parent"
            android:inputType="number"
            style="@style/EditTextStyle">
        </EditText>

        <EditText
            android:id="@+id/editTextSystolicPressure"
            android:hint="Систолическое артериальное давление (мм рт. ст)"
            android:layout_width="match_parent"
            android:inputType="number"
            style="@style/EditTextStyle">
        </EditText>

        <EditText
            android:id="@+id/editTextDiastolicPressure"
            android:hint="Диастолическое артериальное давление (мм рт. ст)"
            android:layout_width="match_parent"
            android:inputType="number"
            style="@style/EditTextStyle">
        </EditText>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Продолжить">
        </Button>
    </LinearLayout>


</FrameLayout>