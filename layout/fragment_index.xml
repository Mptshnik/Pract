<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_index">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:columnCount="2"
            android:rowCount="2">

            <EditText
                android:id="@+id/age"
                style="@style/EditTextStyle"
                android:layout_column="0"
                android:layout_row="0"
                android:inputType="number"
                android:hint="Возраст"/>
            <Spinner
                style="@style/SpinnerStyle"
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_column="0"
                android:layout_row="1"/>
            <ImageView
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/gerb"
                android:layout_marginStart="20dp">
            </ImageView>
        </GridLayout>

        <Button
            android:id="@+id/btn_index_mass"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/gridLayout"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_index_mass"/>
        <Button
            android:id="@+id/btn_movement_level"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_index_mass"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_movement_acivity_level"/>
        <Button
            android:id="@+id/btn_stamina"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_movement_level"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_stamina"/>
        <Button
            android:id="@+id/btn_heart_regulation"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_stamina"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_levelof_heart_regulation"/>
        <Button
            android:id="@+id/btn_life_index"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_heart_regulation"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_life_index"/>
        <Button
            android:id="@+id/btn_skibinsky"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_life_index"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_skibinsky"/>
        <Button
            android:id="@+id/btn_kerdo"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_skibinsky"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_kerdo"/>
        <Button
            android:id="@+id/btn_functional_changes"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_kerdo"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_indexof_functional_changes"/>

        <Button
            android:id="@+id/btn_start"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            style="@style/TestButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_functional_changes"
            tools:ignore="MissingConstraints"
            android:text="@string/btn_start"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>