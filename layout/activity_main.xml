<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/ActivityStyle">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></FrameLayout>

    <Button
        android:id="@+id/btnHome"
        style="@style/NavigationButtonStyle"
        android:drawableTop="@drawable/ic_baseline_home_24"
        android:text="Главная"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnIndexes"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Button
        android:id="@+id/btnIndexes"
        style="@style/NavigationButtonStyle"
        android:drawableTop="@drawable/ic_baseline_calculate_24"
        android:text="Индексы"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnInfo"
        app:layout_constraintStart_toEndOf="@id/btnHome"></Button>

    <Button
        android:id="@+id/btnInfo"
        style="@style/NavigationButtonStyle"
        android:drawableTop="@drawable/ic_baseline_wysiwyg_24"
        android:text="Итог"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnIndexes"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>